<body class="shopManager-login-header">
<div class="container">
  <section class="shopManager-login-header">
    <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

      <div class="row main">
      <div class="panel-heading">
         <div class="panel-title text-center">
            <h1 class="title">ログイン</h1>
            <hr />
          </div>
      </div>

      <% if flash[:errorlist] %>
        <% flash[:errorlist].each do |error| %>
          <%= error %><br>
        <% end %>
      <% end %>

      <!-- <% if flash[:nomanagementid] %>
        <%#= flash[:nomanagementid] %>
      <% end %> -->

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス　※必須入力" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード ※必須入力" %>
        </div>

        <div class="admin-id">
          ※ブランドごとに発番されている番号<br>
          <%= f.password_field :shop_master_id, autocomplete: "off", class: "form-control", placeholder: "店舗マスタID　※必須入力" %>
          ※支店コード<br>
          <%= f.password_field :branch_office_id, autocomplete: "off", class: "form-control", placeholder: "支店ID  ※付与されている場合は入力" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :内容を記憶させる %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      一般ユーザーのログインの場合は<%= link_to 'こちら', root_url(only_path: false) + 'general_users/sign_in' %>
    </div>
    </div>
  </section>
</div>
</body>
